{
    "include": [
        "./src/**/*.js",
        "./test/**/*.js",
        "./index.d.ts",
        "./rollup.config.js"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noEmit": true,
        "checkJs": true,
        "allowJs": true,
        "pretty": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node"
    }
}
